extends custom

block content
    link(href="/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css", rel="stylesheet")
    link(href="/datatables-responsive/css/responsive.dataTables.css", rel="stylesheet")
    // Page Content
    #page-wrapper
     .row
      .col-xs-12.col-md-12
       h1.page-header Add Housemate
        // /.col-lg-12
     .row
      .col-xs-12.col-md-6        
        .panel-heading
            h3.panel-title Current Users
        .panel-body
           ul.list-unstyled
            for user in currentUsers
              li 
                button.btn.btn-primary.btn-lg(type='button')
                  i.fa.fa-user  #{user}
        |                    
      .col-xs-12.col-md-6
        .panel-heading
            h3.panel-title Invite Housemate
        .panel-body
          .col-xs-12.col-md-3
            input.form-control(placeholder='Email Address', name='email', type='username', autofocus='',required='')           
          .col-xs-12.col-md-3
             button.btn.btn-primary.btn(type='button')
                i.fa.fa-send | Add
              
